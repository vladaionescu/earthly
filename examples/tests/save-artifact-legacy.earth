VERSION 0.5 # this should save all direct AND indirect artifacts

savea:
    FROM alpine:latest
    RUN echo apple > a
    SAVE ARTIFACT a AS LOCAL a

saveb:
    FROM alpine:latest
    RUN echo bannana > b
    SAVE ARTIFACT b AS LOCAL b

savec:
    BUILD +saveb
    FROM alpine:latest
    RUN echo cherry > c
    SAVE ARTIFACT c AS LOCAL c

saved:
    FROM +savec
    RUN echo durian > d
    SAVE ARTIFACT d AS LOCAL d

all:
    BUILD +saved
